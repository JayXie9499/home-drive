{
	"extends": "@tsconfig/node22/tsconfig.json",
	"compilerOptions": {
		"allowJs": false,
		"alwaysStrict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noEmitOnError": true,
		"rootDir": "../",
		"baseUrl": "./",
		"outDir": "build",
		"paths": {
			"@shared/*": ["../shared/*"]
		}
	},
	"include": ["src/**/*.ts", "../shared/**/*.ts"],
	"exclude": ["node_modules"]
}
